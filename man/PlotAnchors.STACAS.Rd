\examples{
    #PlotAnchors.STACAS requires an anchorset object generated by FindAnchors.STACAS
    library(grid)
    library(gridExtra)

    ref.anchors <- FindAnchors.STACAS(object.list, anchor.features = anchor.features)
    plots <- PlotAnchors.STACAS(ref.anchors)
    g.cols <- 3
    g.rows <- as.integer((length(plots) + 2)/g.cols)
    g <- do.call("arrangeGrob", c(plots, ncol = g.cols, nrow = g.rows))
    ggsave("anchor.dist.mean.pairwise.png", plot = g, width = 6 *
        g.cols, height = 6 * g.rows)
    grid.draw(g)
}
